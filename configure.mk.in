# system variables
MKC_VERSION=@@version@@
MKC_EXECDIR?=@@execsdir@@

# user defined variables
MKC_SHOW_CACHED?=1       # set it to `0' to hide "...(cached)..." lines
MKC_DELETE_TMPFILES?=0   # set it to `1' to delete temporary files
MKC_CACHEDIR?=${.OBJDIR} # directory for cache and intermediate files

#
.include <bsd.own.mk>

# checking for headers
.for h in ${MKC_HEADERS}
HAVE.${h:S|/|_|g}!=	env MKC_DELETE_TMPFILES=${MKC_DELETE_TMPFILES} MKC_SHOW_CACHED=${MKC_SHOW_CACHED} CC=${CC} LDFLAGS=${LDFLAGS} LDADD=${LDADD} MKC_CACHEDIR=${MKC_CACHEDIR} ${MKC_EXECDIR}/mkc_check_header ${h}
CFLAGS+=	-DHAVE_${h:tu:S|.|_|g:S|/|_|g}=${HAVE.${h:S|/|_|g}}
.endfor

# checking for functions in libraries
.for f in ${MKC_FUNCS}
HAVE.${f:S/:/./g}!=	env MKC_DELETE_TMPFILES=${MKC_DELETE_TMPFILES} MKC_SHOW_CACHED=${MKC_SHOW_CACHED} CC=${CC} LDFLAGS=${LDFLAGS} LDADD=${LDADD} MKC_CACHEDIR=${MKC_CACHEDIR} ${MKC_EXECDIR}/mkc_check_func ${f:S/:/ /g}
.endfor

# checking for sizeof(xxx)
.for t in ${MKC_SIZEOF}
SIZEOF.${t:S| |_|g:S|*|P|g}!=	env MKC_DELETE_TMPFILES=${MKC_DELETE_TMPFILES} MKC_SHOW_CACHED=${MKC_SHOW_CACHED} CC=${CC} LDFLAGS=${LDFLAGS} LDADD=${LDADD} MKC_CACHEDIR=${MKC_CACHEDIR} ${MKC_EXECDIR}/mkc_check_sizeof '${t}' '${defined(MKC_SIZEOF_INCS.${t}):?${MKC_SIZEOF_INCS.${t}}:}'
CFLAGS+=	-DSIZEOF_${t:S/-/_/g:S| |_|g:S|*|P|g:tu}=${SIZEOF.${t:S| |_|g:S|*|P|g}}
.endfor

# checking for defines
.for d in ${MKC_DEFINES}
HAVE_DEFINE.${d:S/./_/g:S/:/./g}!=	env MKC_DELETE_TMPFILES=${MKC_DELETE_TMPFILES} MKC_SHOW_CACHED=${MKC_SHOW_CACHED} CC=${CC} CPPFLAGS=${CPPFLAGS} CFLAGS=${CFLAGS} MKC_CACHEDIR=${MKC_CACHEDIR} ${MKC_EXECDIR}/mkc_check_decl define ${d:S/:/ /g}
CFLAGS+=	-DHAVE_DEFINE_${d:tu:S/:/_/g:S/./_/g}=${HAVE_DEFINE.${d:S/./_/g:S/:/./g}}
.endfor

# checking for variables
.for d in ${MKC_VARS}
HAVE_VAR.${d:S/./_/g:S/:/./g}!=	env MKC_DELETE_TMPFILES=${MKC_DELETE_TMPFILES} MKC_SHOW_CACHED=${MKC_SHOW_CACHED} CC=${CC} CPPFLAGS=${CPPFLAGS} CFLAGS=${CFLAGS} MKC_CACHEDIR=${MKC_CACHEDIR} ${MKC_EXECDIR}/mkc_check_decl var ${d:S/:/ /g}
CFLAGS+=	-DHAVE_VAR_${d:tu:S/:/_/g:S/./_/g}=${HAVE_VAR.${d:S/./_/g:S/:/./g}}
.endfor

# error check
all : ${.OBJDIR}/.error-check
${.OBJDIR}/.error-check:
	@if test -z ${ERR_MSG}; then \
		touch $@; return 0; \
	else \
		echo ${ERR_MSG}; return 1; \
	fi
